<%- include ('../partials/head') %>
<%- include ('../partials/login_register_menu') %>

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1><center>Register</center></h1>
                <form action="/register" method="POST">

                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input class="form-control form-control-sm" type="text" id="username" name="username"/>
                    </div>

                    <div class="form-group">
                        <label for="hashPW">Password:</label>
                        <input class="form-control form-control-sm" type="password" id="hashPW" name="hashPW"/>
                    </div>

                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input class="form-control form-control-sm" type="text" id="name" name="name"/>
                    </div>

                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input class="form-control form-control-sm" type="text" id="address" name="address"/>
                    </div>

                    <div class="text-center">
                        <p>Already registered? <a href="/login">Login here</a></p>
                        <input type="submit" class="btn btn-primary" value="Register">
                    </div>

                </form>
            </div>
        </div>
    </div>
</main>

<%- include ('../partials/footer') %>
